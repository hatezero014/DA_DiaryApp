<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_white_corner"
    android:layout_margin="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin chi tiết"
        android:background="@drawable/background_md_theme_primary"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/tv_detail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20dp"
        android:textSize="16sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnCancel1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            app:backgroundTint="@null"
            android:theme="@null"
            android:background="@drawable/background_color_darkergray"
            android:text="OK"/>

        <Button
            android:id="@+id/btn_Go_to_Diary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:backgroundTint="@null"
            android:theme="@null"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_md_theme_primary_radius_all"
            android:text="Đi đến nhật kí"/>

    </LinearLayout>

</LinearLayout>